{
  "kind": "singleType",
  "collectionName": "store_settings",
  "info": {
    "singularName": "store-setting",
    "pluralName": "store-settings",
    "displayName": "Store Setting",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "store_mode": {
      "type": "enumeration",
      "enum": [
        "WHATSAPP",
        "B2B",
        "ECOM",
        "RESELLER_ECOM"
      ]
    },
    "primary_color": {
      "type": "string"
    },
    "secondary_color": {
      "type": "string"
    },
    "bg_color": {
      "type": "string"
    },
    "text_color": {
      "type": "string"
    },
    "button_color": {
      "type": "string"
    },
    "is_app_enabled": {
      "type": "boolean",
      "default": true
    },
    "is_maintenance_mode": {
      "type": "boolean",
      "default": false
    },
    "is_store_active": {
      "type": "boolean",
      "default": true
    },
    "store_inactive_message": {
      "type": "text"
    },
    "store_maintenance_message": {
      "type": "text"
    },
    "is_pricing_visible": {
      "type": "boolean",
      "default": true
    },
    "is_cart_enabled": {
      "type": "boolean",
      "default": true
    },
    "is_wallet_enabled": {
      "type": "boolean",
      "default": true
    },
    "product_card_style": {
      "type": "enumeration",
      "enum": [
        "PORTRAIT",
        "SQUARE"
      ],
      "default": "SQUARE"
    },
    "category_card_style": {
      "type": "enumeration",
      "enum": [
        "LANDSCAPE",
        "SQUARE"
      ],
      "default": "SQUARE"
    },
    "product_list_span_mobile": {
      "type": "integer",
      "default": 2,
      "min": 1,
      "max": 4
    },
    "product_list_span_desktop": {
      "type": "integer",
      "default": 4,
      "min": 2,
      "max": 10
    }
  }
}
